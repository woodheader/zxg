.text {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
}
.text .text_name {
  height: 100%;
  width: 100%;
  font-size: 30rpx;
}
.text .text_name .icon {
  display: inline-block;
  border-top: 10rpx solid #000;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  margin-left: 20rpx;
}
.content-text {
  position: relative;
  bottom: 0;
  width: 100%;
  height: 580rpx;
  background-color: #fff;
  overflow: hidden;
  z-index: 111;
  background-color: #fafafa;
}
.content-text .dialog_top {
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.05);
  display: flex;
  padding: 20rpx 20rpx;
  color: #218cfe;
  justify-content: space-between;
  position: absolute;
  z-index: 99999;
  width: 100%;
  background-color: #fff;
}
.content-text .picker-view {
  width: 750rpx;
  height: 430rpx;
  margin-top: -160rpx;
  padding-bottom: 180rpx;
  border-bottom: 130rpx solid #fff;
}
.content-text .item {
  line-height: 72rpx;
  text-align: center;
  font-size: 38rpx;
}

